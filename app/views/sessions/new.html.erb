<h1 class="ui center aligned header">Welcome to MessageMe - a complete Chat App</h1>
<h2 class="ui center aligned medium icon header">
  <i class="circular orange power off icon"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

      <%= form_with(scope: :session, url: login_path, class: "ui form", data: {turbo: false}, local: true) do |f|  %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, class: "ui left icon input", placeholder: "Username"%>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.text_field :password, class: "ui left icon input", placeholder: "Password"%>
            <i class="lock icon"></i>
          </div>
        </div>

        <%= f.submit("Log in", class: "ui orange submit button" ) %>

      <% end %>


    </div>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>